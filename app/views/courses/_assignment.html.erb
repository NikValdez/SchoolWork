<%= simple_form_for ([@course, @assignment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description, as: :trix_editor %>
    <%= f.input :due_date, input_html: { class: "daterange" }, as: :string
 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= render 'assignments/due_date.js' %>