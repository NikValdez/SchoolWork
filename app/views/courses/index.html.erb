<header id="header">
    <div class="container">

      <div id="logo" class="pull-left">
        <!-- <a href="#hero"><img src="img/logo.png" alt="" title="Courses" /></img></a> -->
        <!-- Uncomment below if you prefer to use a text logo -->
        <h1><a href="#hero">Courses</a></h1>
      </div>

      <nav id="nav-menu-container">
        <ul class="nav-menu">
          <li><a href="/">Home</a></li>
          <li><a href="#about">About Us</a></li>
          <li><a href="#services">Services</a></li>
          <li class="menu-active"><a href="/visitors">Profs</a></li>
        </ul>
      </nav><!-- #nav-menu-container -->
    </div>
  </header><!-- #header -->

<table class="course-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Prof</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
<h1 class="courses">Course List</h1>
<div class="col-lg-4 col-lg-offset-4">
  <%= form_tag(courses_path, method: :get, class: "form-inline", role: 'search') do %>
    <div class="input-group">              
      <%= text_field_tag :term, 
          params[:term], 
          id: 'courses_search', 
          autocomplete: :off, 
          placeholder: 'Search Courses', 
          class: 'form-control' %>
      <div class="input-group-btn search-panel">
        <%= submit_tag 'Search', name: nil, class: "btn btn-default"%>
      </div>
    </div>
</div>
</div>
<% end %>
    <% @courses.each do |course| %>
      <tr class="course-list">
        <td><%= course.title %></td>
        <td><%= course.prof %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Course', new_course_path %>
</div>
